# Twitter API Configuration
# Get your API key from: https://rapidapi.com/twitter-v24/api/twitter-v24
TWITTER_RAPIDAPI_KEY=your_rapidapi_key_here
TWITTER_RAPIDAPI_HOST=twitter-v24.p.rapidapi.com

# Google Gemini AI Configuration
# Get your API key from: https://makersuite.google.com/app/apikey
GEMINI_API_KEY=your_gemini_api_key_here

# Application Configuration (Public - accessible on client-side)
NEXT_PUBLIC_APP_URL=https://pacomuro.site
NEXT_PUBLIC_APP_NAME=X Personal Assistant
NEXT_PUBLIC_DEFAULT_USERNAME=pacomuro_

# Environment Configuration
NODE_ENV=development

# Security Configuration
CONFIG_SECRET=your_secure_random_string_here_min_32_chars
# IMPORTANT: Generate a strong random string for production
# Example: openssl rand -hex 32

# Security & Performance Settings (Production)
NEXT_OTEL_VERBOSE=0
NEXT_DEBUG_BUILD=false
NEXT_TELEMETRY_DISABLED=1

# Rate Limiting (if using additional middleware)
RATE_LIMIT_MAX=100
RATE_LIMIT_WINDOW=900000

# Additional Security Headers (if needed)
FORCE_HTTPS=true

# Logging and Monitoring
LOG_LEVEL=info
PERFORMANCE_MONITORING=true

# Development Configuration (only for development environment)
# NODE_ENV=development
# NEXT_DEBUG_BUILD=true
# NEXT_TELEMETRY_DISABLED=0 